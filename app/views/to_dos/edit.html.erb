<h1>To Do Edit</h1>

<%= form_for @todo do |f| %>
  <% if @todo.errors.any? %>
    <ul>
      <% @to_do.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.text_field :title, placeholder: 'Title' %>

  <%= f.submit %>

<% end %>

<%= link_to 'Back', to_dos_path %>
